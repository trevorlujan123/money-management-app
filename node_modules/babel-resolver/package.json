  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-preset-es2015": "^6.13.2",
    "babel-register": "^6.11.6",
    "coveralls": "^2.11.4",
    "eslint": "^1.9.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-plugin-babel": "^2.1.1",
    "eslint-plugin-standard": "^1.3.1",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.3"
